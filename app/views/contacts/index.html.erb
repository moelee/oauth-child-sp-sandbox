<h1>Listing contacts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Postal code</th>
    <th>Phone</th>
    <th>Email</th>
  </tr>

<% for contact in @contacts %>
  <tr>
    <td><%=h contact.name %></td>
    <td><%=h contact.address %></td>
    <td><%=h contact.city %></td>
    <td><%=h contact.state %></td>
    <td><%=h contact.postal_code %></td>
    <td><%=h contact.phone %></td>
    <td><%=h contact.email %></td>
    <td><%= link_to 'Show', user_contact_path(@user, contact) %></td>
    <td><%= link_to 'Edit', edit_user_contact_path(@user, contact) %></td>
    <td><%= link_to 'Destroy', user_contact_path(@user, contact), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

